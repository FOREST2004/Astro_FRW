---
import Layout from '../layouts/Layout.astro';
import PricingCalculator from '../components/PricingCalculator.jsx';
import LiveClock from '../components/LiveClock.jsx';
---

<Layout>
  <div class="font-sans text-gray-800 bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen py-12">

    <section class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4 text-gray-800">
        Astro Islands Demo
      </h1>
      <p class="text-gray-600 mb-6">
        Static HTML + React Islands
      </p>
      <a
        href="/about"
        class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm"
      >
        üìÅ File-based Routing ‚Üí
      </a>
    </section>

    <p>---------------------------------------------------------------------------------------------------------------</p>

    <section class="max-w-4xl mx-auto px-4 mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center">Astro Components</h2>

      <p>- - - - </p>

      <div>
          <h3>1. Demo client:load directive</h3>
          <PricingCalculator client:load />    
      </div>

      <p>- - - - - - - - - - - - - - - - </p>
 
      <div>
          <h3>2. Demo client:only directive</h3>
          <LiveClock client:only="react" />
      </div>
    </section>

    <p>---------------------------------------------------------------------------------------------------------------</p>

</Layout>
